<a href="/home">Home</a>

<h1><%=@user.username%></h1>

<h1>Genre's Name: <%=@genre.name%></h1>
<h1>Genre's Songs:</h1>
<%@genre.songs.each do |song| %>
    <h2><a href="/songs/<%=song.id%>"><%=song.name%></a></h2>
<%end%>
<br><br>
<h1>Genre's Users:</h1>
<%@genre.users.each do |user| %>
    <h2><a href="/users/<%=user.slug%>"><%=user.name%></a></h2>
<%end%>

<a href="/genres/<%=@genre.id%>/edit">Edit Genre</a>
<%if @user.username == "admin"%>
    <form action="/genres/<%=@genre.id%>/delete" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Genre">
    </form>
<%end%>